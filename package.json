{
  "name": "my-central-hub",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build && nodemon src/main.ts",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "start": "npm run build && node dist/main.js",
    "start-w": "npm run build && node dist/main.js",
    "test": "npm run build && jest --all --verbose | grep -E 'FAIL|^ ✕'",
    "test-w": "npm run build && jest --all",
    "test:stress": "jest \"stress/**/*.test.ts\"",
    "test:ci": "jest --testPathIgnorePatterns=stress",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "lint:ts": "eslint src --ext .ts",
    "lint": "npm-run-all lint:ts",
    "ci": "npm run lint && npm run type-check && npm run test:ci",
    "e2e": "npm run build && npx jest tests/core/endToEnd.test.ts --verbose | grep -E 'FAIL|^ ✕'"
  },
